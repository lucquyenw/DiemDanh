<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.pc.attendance.viewModels.ConnectionVM"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin_medium"
            android:layout_gravity="center"
            android:text="Open application with Offline Mode"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Change to Offline Mode"
            android:onClick="@{(v)->viewModel.openOfflineMode()}"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin_medium">

        </Button>

    </LinearLayout>

</layout>